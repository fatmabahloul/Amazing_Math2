<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fatma.amazing_math2.Main2Activity"
    android:background="@android:color/holo_green_dark">
    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Facile"
        android:id="@+id/easybutton"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#f1df3d"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Moyen"
        android:id="@+id/meduimbutton"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#dea410"
        android:layout_below="@+id/easybutton"
        android:layout_alignLeft="@+id/easybutton"
        android:layout_alignStart="@+id/easybutton"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Difficile"
        android:id="@+id/hardbutton"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:typeface="normal"
        android:textSize="20dp"
        android:background="#e34c38"
        android:layout_below="@+id/meduimbutton"
        android:layout_alignLeft="@+id/meduimbutton"
        android:layout_alignStart="@+id/meduimbutton"
        android:layout_marginTop="20dp" />

</RelativeLayout>
